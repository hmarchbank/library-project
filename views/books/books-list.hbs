<h1>List of Books in our database:</h1>

{{#each books}}
    <section class="book-summary">
        <h2>{{this.title}}</h2>
        <h4>By {{this.author.name}}</h4>
        <p>
            {{this.description}}
        </p>
        <a href="/books/{{this.id}}">More details</a>
    </section>
{{/each}}