<h2>Create a book</h2>

<form action="/books/create" method="POST">
  <label> Title:
    <input type="text" name="title" />
  </label>

  <br>
  <label> Author:<br>
    <select name="author">
      {{#each authorArray}}
  
      <option name="author"value="{{this._id}}">{{this.name}}</option>
  
      {{/each}}
    </select>
  </label>
      <br>

  <label> Description:
    <textarea name="description" cols="30" rows="4"> </textarea>
  </label>
  <br>

  <label> Rating:
    <input type="number" name="rating" min="1" max="10" />
  </label>

  <button type="submit"> Create </button>
</form>
